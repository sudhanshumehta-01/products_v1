<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd" version="5.0">
  <display-name>products_v1</display-name>
  <welcome-file-list>
		<welcome-file>showProduct.do</welcome-file>
	</welcome-file-list>
  
  <servlet>
        <servlet-name>AddProduct</servlet-name>
        <servlet-class>org.mz.controller.AddProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddProduct</servlet-name>
        <url-pattern>/addProduct.do</url-pattern>
    </servlet-mapping>
    
    <servlet>
    	<servlet-name>ShowProduct</servlet-name>
    	<servlet-class>org.mz.controller.ShowProductServlet</servlet-class>
	</servlet>
	<servlet-mapping>
    	<servlet-name>ShowProduct</servlet-name>
    	<url-pattern>/showProduct.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
    	<servlet-name>GoOnProduct</servlet-name>
    	<servlet-class>org.mz.controller.GoOnProductServlet</servlet-class>
	</servlet>
	<servlet-mapping>
    	<servlet-name>GoOnProduct</servlet-name>
    	<url-pattern>/goOnProduct.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
    	<servlet-name>AddToCart</servlet-name>
    	<servlet-class>org.mz.controller.AddToCartServlet</servlet-class>
	</servlet>
	<servlet-mapping>
    	<servlet-name>AddToCart</servlet-name>
    	<url-pattern>/addToCart.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
    	<servlet-name>DisplayAllCart</servlet-name>
    	<servlet-class>org.mz.controller.DisplayAllCartServlet</servlet-class>
	</servlet>
	<servlet-mapping>
    	<servlet-name>DisplayAllCart</servlet-name>
    	<url-pattern>/displayAllCart.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
    	<servlet-name>RemoveFromCart</servlet-name>
    	<servlet-class>org.mz.controller.RemoveFromCartServlet</servlet-class>
	</servlet>
	<servlet-mapping>
    	<servlet-name>RemoveFromCart</servlet-name>
    	<url-pattern>/removeFromCart.do</url-pattern>
	</servlet-mapping>
	
</web-app>